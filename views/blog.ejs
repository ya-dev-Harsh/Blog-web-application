<%- include('partials/header', { title: 'Write Your Blog' }) %>

<h1>Welcome, <%= name %>!</h1>
<form action="/submit" method="POST">
  <input type="hidden" name="name" value="<%= name %>">
  <label for="content">Your Blog:</label><br>
  <textarea id="content" name="content" rows="30" cols="80" required></textarea><br>
  <button type="submit">Submit Blog</button>
</form>

